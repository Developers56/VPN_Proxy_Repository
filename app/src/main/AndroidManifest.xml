<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.microvpn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MicroVPN">
        <activity android:name=".ViewUserProfile"></activity>
        <activity android:name=".PolicyViewPager" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegionsScreen" />
        <activity android:name=".PremiumScreen" />
        <activity android:name=".SignupScreen" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".SafetyPoli" />
        <activity android:name=".VPNActivity" />
        <activity android:name=".MalwarePoli" />
        <activity android:name=".StreamingPoli" />
        <activity android:name=".BrowsingScreen" />
        <activity android:name=".PrivacyPolicy" />
        <activity android:name=".PreSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>