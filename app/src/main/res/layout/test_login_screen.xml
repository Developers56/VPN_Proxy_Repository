<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splbg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/idrelloginmain"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="VPN Proxy"
            android:textSize="35sp"
            android:id="@+id/idvpnproxlog"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idvpnproxlog"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Login now to access faster internet \n more than 120+ locations"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/idtextlogin"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/rellogcentwid"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#3D596D"
            android:textColor="@color/white"
            android:background="@drawable/edtrounded"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:paddingLeft="10dp"
            android:drawablePadding="20dp"
            android:hint="Enter email"
            android:id="@+id/edtusername"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/edtusername"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:textColorHint="#3D596D"
            android:layout_marginRight="20dp"
            android:background="@drawable/edtrounded"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_password"
            android:paddingLeft="10dp"
            android:drawablePadding="20dp"
            android:hint="Enter Password"
            android:id="@+id/edtpassword"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:layout_below="@id/edtpassword"
            android:layout_marginTop="8dp"
            android:id="@+id/forgotpas"
            android:onClick="forgotpasswrd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_rectangle"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/forgotpas"
            android:layout_marginTop="15dp"
            android:text="Login"
            android:onClick="loginnext"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:drawableRight="@drawable/ic_arrow"
            android:paddingRight="20dp"
            android:id="@+id/btnlogin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnlogin"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Login with Social Media"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/idtvloginsocial"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rellogcentwid"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ?"
            android:textColor="#3D596D"
            android:id="@+id/dnthaveacnt"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dnthaveacnt"
            android:layout_alignParentBottom="true"
            android:text=" Signup"
            android:onClick="gotosignup"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedsocialbtn"
            android:drawableLeft="@drawable/ic_gmail"
            android:paddingLeft="5dp"
            android:text="Login with Gmail"
            android:onClick="loginviagoogle"
            android:textAlignment="center"
            />
    </RelativeLayout>
</RelativeLayout>