<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PolicyViewPager"
    android:background="@drawable/splbg"
    >
<androidx.viewpager.widget.ViewPager
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idviewpager"
    android:layout_above="@+id/idbtnprem"
    ></androidx.viewpager.widget.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/idbtnprem"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_rectangle"
            android:text="Next"
            android:onClick="goestosignup"
            android:textSize="20sp"
            android:id="@+id/idbtnmalcont"
            android:textColor="@color/white"
            />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sign in"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="80dp"
               android:layout_alignParentLeft="true"
               android:layout_marginRight="20dp"
               android:layout_below="@+id/idbtnmalcont"
               />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore Purchase"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:layout_below="@+id/idbtnmalcont"
            />
    </RelativeLayout>
</RelativeLayout>